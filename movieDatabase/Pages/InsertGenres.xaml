<Page x:Class="movieDatabase.Pages.InsertGenres"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:movieDatabase.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InsertGenres">

    <Grid Background="#555555">
        <StackPanel Width="350">
            <Label Foreground="White">Műfaj neve</Label>
            <TextBox x:Name="tbInsertGenres"/>
            <Button x:Name="btInsert" Content="Beszúrás" Click="btInsert_Click"/>
        </StackPanel>
    </Grid>
</Page>
