<Page x:Class="movieDatabase.Pages.InsertActor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:movieDatabase.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InsertActor">

    <Grid Background="#555555">
        <StackPanel Width="350">
            <Label Foreground="White">Szinész Keresztneve</Label>
            <TextBox x:Name="tbActFname"/>
            <Label Foreground="White">Szinész vezetékneve</Label>
            <TextBox x:Name="tbActLname"/>
            <Label Foreground="White">Szinész neme</Label>
            <TabControl x:Name="tcActorGender" SelectionChanged="tcActorGender_SelectionChanged">
                <TabItem Header="Férfi" Name="male"/>
                <TabItem Header="Nő" Name="femaile"/>
            </TabControl>
            <Button x:Name="btbeszur" Content="Beszúr" Click="btbeszur_Click"/>
        </StackPanel>
    </Grid>
</Page>
