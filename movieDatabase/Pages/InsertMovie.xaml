<Page x:Class="movieDatabase.Pages.InsertMovie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:movieDatabase.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InsertMovie">

    <Grid Background="LightGreen">
        <StackPanel Width="350">
            <Label>Film cím</Label>
            <TextBox x:Name="tbMovieTitle"/>
            <Label>Film leírás</Label>
            <TextBox x:Name="tbMovieDesc"/>
            <Label>Évjárat</Label>
            <TextBox x:Name="tbMovieYear"/>
            <Label>Film hossz</Label>
            <TextBox x:Name="tbMovieLong"/>
            <Label>Eredeti nyelv</Label>
            <TextBox x:Name="tbMovieLang"/>
            <Label>Megjelenési dátuma (YYYY-MM-DD)</Label>
            <TextBox x:Name="dpMovieDtRel"/>
            <Label>Állam</Label>
            <TextBox x:Name="tbMovieRelCountry"/>
            <Label>trailer</Label>
            <TextBox x:Name="tbMobieTrailer"/>
            <Label>Picture</Label>
            <TextBox x:Name="tbMoviPic"/>
            <Button Content="Beszúr" x:Name="btInsertMovie" Click="btInsertMovie_Click"/>
        </StackPanel>
    </Grid>
</Page>
