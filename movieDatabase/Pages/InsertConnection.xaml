<Page x:Class="movieDatabase.Pages.InsertConnection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:movieDatabase.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InsertConnection">

    <Grid  Background="LightGreen">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="330"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">Movies</Label>
        <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">Actors</Label>
        <DataGrid x:Name="dgGridMovies" Grid.Row="1" Grid.Column="0" ItemsSource="{Binding}"/>
        <DataGrid x:Name="dgGridActors" Grid.Row="1" Grid.Column="1" ItemsSource="{Binding}"/>
        <TextBox x:Name="tbRole" Grid.Row="2" Grid.Column="0"></TextBox>
        <Button x:Name="btnInsert"   Grid.Row="2" Grid.Column="1" Click="btnInsert_Click">Insert</Button>
    </Grid>
</Page>
