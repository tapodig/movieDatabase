<Window x:Class="movieDatabase.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:movieDatabase"
        mc:Ignorable="d"
        Title="About" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock FontSize="30" HorizontalAlignment="Center" Text="Filmes adatbázis"/>
            <TextBlock Text="Prototipus verzió 0.5" FontSize="20" HorizontalAlignment="Center"/>

        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button x:Name="btClose" Content="Close" Click="btClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
